# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update the values

# Proxmox Configuration
proxmox_api_url      = "https://your-proxmox-server:8006/api2/json"
proxmox_token_id     = "terraform@pve!terraform-token"
proxmox_token_secret = "your-token-secret-here"
proxmox_tls_insecure = false
proxmox_node_name    = "pve"
proxmox_datastore    = "local-lvm"
proxmox_template     = "ubuntu-22.04-cloud"
proxmox_bridge       = "vmbr0"

# Chef Configuration
chef_server_url  = "https://your-chef-server/organizations/your-org"
chef_client_name = "terraform-client"
chef_private_key = <<-EOF
-----BEGIN RSA PRIVATE KEY-----
your-chef-private-key-here
-----END RSA PRIVATE KEY-----
EOF
chef_environment = "production"

# Kubernetes Cluster Configuration
cluster_name       = "my-k8s-cluster"
kubernetes_version = "1.28.0"
container_runtime  = "containerd"
pod_cidr          = "10.244.0.0/16"
service_cidr      = "10.96.0.0/12"
cluster_dns       = "10.96.0.10"
load_balancer_ip  = ""

# Node Configuration
master_count = 1
worker_count = 2

# Master Node Resources
master_cpu_cores = 2
master_memory    = 4096
master_disk_size = 50

# Worker Node Resources
worker_cpu_cores = 2
worker_memory    = 4096
worker_disk_size = 50

# VM Access Configuration
vm_username = "ubuntu"
vm_password = "your-secure-password"
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC7... your-email@example.com"
